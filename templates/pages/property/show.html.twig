{% extends 'base.html.twig' %}

{% block title 'Biens  en detail'%}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {% if property.imageName %}
                <img src="{{ vich_uploader_asset(property,'imageFile')}}" alt="" class="card-img-top"
                    style="width: 100%; height: auto;">
                {% else %}

                <img src="{{ asset('images/default.png')}}" alt="pas d'image" class="card-img-top"
                    style="width: 100%; height: auto;">

                {% endif %}
            </div>
            <div class="col-md-4">
                <h3>{{property.title}}</h3>
                <h5>{{property.rooms}} -pièces {{property.surface}}</h5>
                <div class="text-color price-config">{{property.FormattedPrice}} FC <br>
                    <a href="#" class="btn btn-primary">Contacter l'agence</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <p>{{property.description|nl2br}}</p>
    <div class="row">
        <div class="col-md-6">
            <h2>Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                    <th>Surface Habitable</th>
                    <td>{{property.surface}}</td>
                </tr>
                <tr>
                    <th>Pièces</th>
                    <td>{{property.rooms}}</td>
                </tr>
                <tr>
                    <th>Chambre</th>
                    <td>{{property.surface}}</td>
                </tr>
                <tr>
                    <th>Etage</th>
                    <td>{{property.bedrooms}}</td>
                </tr>
                <tr>
                    <th>Chauffage</th>
                    <td>{{property.heatType}}</td>
                </tr>


                </thead>
            </table>
        </div>
        <div class="col-md-4">
            <h2>Spécificités</h2>
            <ul class="list-group">
                {% for option in property.options %}
                <li class="list-group-item">{{option.name}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}